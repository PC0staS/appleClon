---
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.jpeg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Google Fonts - Fuentes similares a las de Apple -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=SF+Pro+Display:wght@100;200;300;400;500;600;700;800;900&family=SF+Pro+Text:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <title>Apple</title>
  </head>
  <body class="overflow-x-hidden">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family:
      "SF Pro Text",
      "SF Pro Display",
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      "Roboto",
      "Helvetica Neue",
      Arial,
      sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Fuentes espec√≠ficas para diferentes elementos */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family:
      "SF Pro Display",
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      sans-serif;
    font-weight: 600;
  }

  p,
  span,
  div {
    font-family:
      "SF Pro Text",
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      sans-serif;
  }
</style>
